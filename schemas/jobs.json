{
  "type": "object",
  "properties": {
    "jobs": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": { "type": "string" },
          "name": { "type": "string" },
          "plugin": { "type": "string" },
          "params": { "type": "object" },
          "schedule": { "type": "string" },
          "on_success": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "on_failure": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "on_finish": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "depends_on": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "enabled": {
            "type": "boolean",
            "default": true
          },
          "retries": {
            "type": "object",
            "description": "Maximum number of retries on failure",
            "properties": {
              "count": {
                "type": "integer",
                "description": "Number of retries",
                "default": 3
              },
              "interval": {
                "type": "integer",
                "description": "Interval between retries in seconds",
                "default": 5
              }
            },
            "required": ["count", "interval"]
          },
          "timeout": {
            "type": "integer",
            "description": "Timeout in seconds"
          },
          "container": {
            "type": "object",
            "description": "Container configuration",
            "properties": {
              "image": {
                "type": "string",
                "description": "Docker image to use"
              },
              "env": {
                "type": "object",
                "description": "Environment variables for the container"
              },
              "user": { "type": "string" },
              "privileged": { "type": "boolean", "default": false },
              "volumes1": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              },
              "command": {
                "type": "string",
                "description": "Command to run in the container"
              },
              "engine": {
                "type": "string",
                "description": "Container engine to use (e.g., docker, podman)"
              }
            },
            "required": ["image", "command"]
          }
        },
        "oneOf": [
          {
            "required": ["id", "name", "plugin"]
          },
          {
            "required": ["id", "name", "container"]
          }
        ],
        "additionalProperties": true
      }
    },
    "hooks": {
      "type": "object",
      "properties": {
        "before_all": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "after_all": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "before_job": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "after_job": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "on_error": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    }
  },
  "required": ["jobs"]
}
