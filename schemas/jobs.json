{
  "type": "object",
  "properties": {
    "jobs": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": { "type": "string" },
          "name": { "type": "string" },
          "plugin": { "type": "string" },
          "params": { "type": "object" },
          "schedule": { "type": "string" },
          "on_success": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "on_failure": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "on_finish": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "depends_on": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "enabled": {
            "type": "boolean",
            "default": true
          },
          "max_retries": {
            "type": "object",
            "description": "Maximum number of retries on failure",
            "properties": {
              "count": {
                "type": "integer",
